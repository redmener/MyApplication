<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fapiao_background">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/beijingse"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/zuo_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="快速注册"
            android:textColor="@color/baise"
            android:textSize="20sp" />
    <LinearLayout
        android:id="@+id/kefuipone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/kefuicon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"
            android:layout_marginRight="10dp"
            android:textColor="@color/baise"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tv_search"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/home_search_bg"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:textColor="#333333"
            android:textColorHint="#929292"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">
        <EditText
            android:id="@+id/tv_search1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="@drawable/home_search_bg"
            android:hint="请输入验证码"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:textColor="#333333"
            android:textColorHint="#929292"
            android:textSize="14sp" />
        <Button
            android:id="@+id/login_request_code_btn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:text="获取验证码"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/baise"
            android:background="@drawable/home_yanzhengma_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已同意好气网用户协议"
            android:textColor="@color/baise"/>

        <TextView
            android:id="@+id/yonghuxieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/baise"
            android:autoLink="all"
            android:text="《用户协议》"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/addbill"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/titleColorSelected"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/baise"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>